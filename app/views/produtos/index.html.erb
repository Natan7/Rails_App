<!DOCTYPE HTML>
<html lang="pt-br">
    <head>
      <meta charset="utf-8">
    </head>
    <body class="background_image">

      <h1><span class="glyphicon glyphicon-th-list"></span> Produtos</h1>
      <br></br>

      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th><strog>Codigo</strog></th>
            <th><strog>Nome</strog></th>
            <th><strog>Categoria</strog></th>
            <th><strog>Data criacao</strog></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.codigo_id %></td>
              <td><%= produto.nome %></td>
              <td><%= produto.categoria %></td>
              <td><%= produto.data_criacao %></td>

              <td><%= link_to '  Mostrar  ', produto, :class => "btn btn-info btn-sm glyphicon glyphicon-open-file" , :type => "button", :title => "Mostrar Produto", :'aria-hidden'=>"true fa-3x"%></td>

              <td><%= link_to '  Editar  ', edit_produto_path(produto), :class => "btn btn-warning btn-sm glyphicon glyphicon-pencil" , :type => "button", :title => "Editar Produto", :'aria-hidden'=>"true fa-3x" %></td> 

              <td><%= link_to '  Remover  ', produto, :class => "btn btn-danger btn-sm glyphicon glyphicon-trash" , :type => "button", :title => "Deletar Produto",  method: :delete, data: { confirm: 'Realmente Deseja Excluir?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br></br>

      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-1"></div>
        <div class="col-sm-2">
          <%= link_to 'Adicionar Produto', new_produto_path, :class => "btn btn-success" , :type => "button", :title => "Adicionar Novo Produto", :'aria-hidden'=>"true fa-3x" %>
        </div>
      </div>

</body> 

</html>